{
  "name": "@blinkdisk/api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node env.js && wrangler dev --port=4000 -c ./wrangler.jsonc -c ../cloud/wrangler.jsonc --persist-to=../../.wrangler",
    "deploy": "tsc --noEmit && wrangler deploy --minify",
    "typecheck": "tsc --noEmit",
    "typegen": "wrangler types --env-interface CloudflareBindings",
    "env:update": "node env.js && pnpm run typegen"
  },
  "devDependencies": {
    "@blinkdisk/eslint": "workspace:*",
    "@blinkdisk/schemas": "workspace:*",
    "@blinkdisk/typescript": "workspace:*",
    "@types/node": "^22.13.9",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "typescript": "5.8.2",
    "wrangler": "^4.32.0"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@polar-sh/sdk": "^0.35.4",
    "@trpc/server": "^10.45.2",
    "axios": "^1.13.2",
    "better-auth": "^1.3.4",
    "hono": "^4.9.4",
    "kysely": "^0.27.6",
    "posthog-node": "^5.9.2",
    "validation-better-auth": "^1.1.1",
    "zod": "^3.24.2"
  }
}
