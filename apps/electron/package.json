{
  "name": "@blinkdisk/electron",
  "description": "Modern backups for absolutely everyone.",
  "repository": "https://github.com/blinkdisk/blinkdisk",
  "author": {
    "email": "support@blinkdisk.com",
    "name": "BlinkDisk"
  },
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./build/index.js",
  "exports": "./build/index.js",
  "scripts": {
    "dev": "concurrently \"pnpm:compile:dev\" \"pnpm:dev:electron\"",
    "dev:electron": "electronmon ./build/index.js $ELECTRON_EXTRA_ARGS",
    "typecheck": "tsc --noEmit",
    "compile:dev": "node esbuild.config.mjs development",
    "compile:prod": "node esbuild.config.mjs production",
    "prebuild": "pnpm build:frontend && tsc --noEmit && pnpm compile:prod compile",
    "build:frontend": "rm -rf frontend/ && cd ../.. && pnpm --filter desktop build && cp -r apps/desktop/dist apps/electron/frontend",
    "build:linux": "electron-builder -c electron.builder.ts --linux",
    "build:windows": "electron-builder -c electron.builder.ts --windows",
    "build:macos": "electron-builder -c electron.builder.ts --macos"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-log": "^5.3.2",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "get-folder-size": "^5.0.0",
    "p-limit": "^7.1.0",
    "slugify": "^1.6.6",
    "tough-cookie": "^5.1.2"
  },
  "devDependencies": {
    "@blinkdisk/eslint": "workspace:*",
    "@blinkdisk/typescript": "workspace:*",
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/auto-launch": "^5.0.5",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.13.9",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "esbuild": "^0.25.3",
    "eslint": "^9.22.0",
    "typescript": "5.8.2"
  }
}
