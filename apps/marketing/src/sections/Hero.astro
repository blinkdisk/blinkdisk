---
import { Image } from "astro:assets";
import screenshotLight from "@marketing/assets/screenshots/light.png";
import screenshotDark from "@marketing/assets/screenshots/dark.png";
import Button from "@marketing/components/Button.astro";
import GitHubIcon from "@marketing/components/icons/Github.astro";
import DownloadIcon from "@lucide/astro/icons/download";
import PlayIcon from "@lucide/astro/icons/play";
import XIcon from "@lucide/astro/icons/x";
---

<div class="pt-page flex flex-col items-center justify-center pb-16 sm:pb-24">
  <div
    class="flex max-w-[90vw] flex-col items-center text-center md:max-w-[39rem]"
  >
    <h1
      class="mt-4 text-5xl text-[2.5rem] font-bold leading-tight tracking-tight md:text-6xl"
    >
      Backup your files
      <br class="hidden sm:block" />
      before it's too late
    </h1>
    <p
      class="text-muted-foreground mt-4 text-base sm:mt-6 sm:text-lg md:text-xl md:leading-relaxed"
    >
      BlinkDisk is a desktop application that lets you effortlessly create
      backup copies of all your important files
      <span class="hidden sm:inline"> with just a few clicks</span>.
    </p>
    <div class="mt-8 flex items-center gap-3 sm:hidden">
      <Button
        variant="outline"
        size="icon"
        href="https://github.com/blinkdisk/blinkdisk"
        target="_blank"
        rel="noopener noreferrer"
      >
        <GitHubIcon />
      </Button>
      <Button href="/download">
        <DownloadIcon class="mr-1.5 size-4 md:size-5" />
        Download for free
      </Button>
    </div>
    <div class="mt-12 hidden items-center gap-3 sm:flex">
      <Button
        variant="outline"
        size="icon-xl"
        href="https://github.com/blinkdisk/blinkdisk"
        target="_blank"
        rel="noopener noreferrer"
      >
        <GitHubIcon />
      </Button>
      <Button size="xl" href="/download">
        <DownloadIcon class="mr-1.5 size-4 md:size-5" />
        Download for free
      </Button>
    </div>
  </div>
  <div
    id="hero-video-trigger"
    class="lg:rounded-4xl relative mt-16 cursor-pointer overflow-hidden rounded-xl sm:mt-20 sm:rounded-2xl md:rounded-3xl"
  >
    <Image
      src={screenshotLight}
      alt="Screenshot of the BlinkDisk desktop app"
      class="w-content border shadow dark:hidden"
      widths={[640, 960, 1280, 1600]}
      sizes="(max-width: 640px) 90vw, (max-width: 1024px) 90vw, 1024px"
      loading="eager"
      fetchpriority="high"
      quality={85}
    />
    <Image
      src={screenshotDark}
      alt="Screenshot of the BlinkDisk desktop app"
      class="w-content hidden border shadow dark:block"
      widths={[640, 960, 1280, 1600]}
      sizes="(max-width: 640px) 90vw, (max-width: 1024px) 90vw, 1024px"
      loading="eager"
      fetchpriority="high"
      quality={85}
    />
    <div
      class="group absolute inset-0 flex items-center justify-center bg-opacity-0 transition-colors hover:bg-black/10"
    >
      <div
        class="bg-foreground/20 border-foreground/20 sm:size-18 lg:size-22 flex size-16 items-center justify-center rounded-full border-2 shadow-2xl transition-transform group-hover:scale-110 md:size-20"
      >
        <PlayIcon class="text-foreground size-5/12 fill-current" />
      </div>
    </div>
  </div>
</div>

<!-- Video Modal -->
<dialog id="hero-video-modal" class="video-modal">
  <div class="video-modal-content">
    <button
      id="hero-video-close"
      class="video-modal-close"
      aria-label="Close video"
    >
      <XIcon class="size-5" />
    </button>
    <div class="video-modal-iframe-wrapper">
      <iframe
        id="hero-video-iframe"
        width="100%"
        height="100%"
        src=""
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </div>
  </div>
</dialog>

<script>
  const trigger = document.getElementById("hero-video-trigger");
  const modal = document.getElementById(
    "hero-video-modal",
  ) as HTMLDialogElement;
  const closeBtn = document.getElementById("hero-video-close");
  const iframe = document.getElementById(
    "hero-video-iframe",
  ) as HTMLIFrameElement;

  const videoUrl = "https://www.youtube.com/embed/wAKE0aHJptM?autoplay=1";

  trigger?.addEventListener("click", () => {
    iframe.src = videoUrl;
    modal?.showModal();
  });

  closeBtn?.addEventListener("click", () => {
    modal?.close();
  });

  modal?.addEventListener("close", () => {
    iframe.src = "";
  });

  modal?.addEventListener("click", (e) => {
    if (e.target === modal) {
      modal.close();
    }
  });
</script>

<style>
  .video-modal {
    position: fixed;
    inset: 0;
    margin: auto;
    padding: 0;
    border: none;
    background: transparent;
    max-width: 90vw;
    max-height: 90vh;
    width: 100%;
    height: fit-content;
  }

  .video-modal::backdrop {
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
  }

  .video-modal-content {
    position: relative;
    width: 100%;
    max-width: 1152px;
    margin: 0 auto;
  }

  .video-modal-close {
    position: absolute;
    top: -40px;
    right: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 9999px;
    border: none;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .video-modal-close:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .video-modal-iframe-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 12px;
    overflow: hidden;
    background: black;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }

  @media (min-width: 640px) {
    .video-modal-iframe-wrapper {
      border-radius: 16px;
    }
  }

  @media (min-width: 768px) {
    .video-modal-iframe-wrapper {
      border-radius: 20px;
    }
  }
</style>
