---
import StorageMarquee from "@marketing/components/StorageMarquee.astro";

const localStorages = [
  {
    name: "Your Computer",
    description: "Store backups on any local drive",
    image: "computer.svg",
  },
  {
    name: "External Drives",
    description: "Backup to external hard drives",
    image: "drive.svg",
  },
  {
    name: "USB Sticks",
    description: "Portable backup to USB flash drives",
    image: "usb.svg",
  },
  {
    name: "Network Attached Storage",
    description: "Use your home or office NAS",
    image: "nas.svg",
  },
];

const cloudStorages = [
  {
    name: "CloudBlink",
    description: "Our managed cloud storage",
    image: "cloudblink.svg",
  },
  {
    name: "AWS S3",
    description: "Reliable storage by AWS",
    image: "aws.svg",
  },
  {
    name: "Google Cloud",
    description: "Google Cloud's storage solution",
    image: "google-cloud-storage.svg",
  },
  {
    name: "Azure Blob",
    description: "Azure's cloud storage option",
    image: "azure-blob-storage.svg",
  },
];

const otherStorages = [
  {
    name: "S3 Compatible",
    description: "Any S3-compatible service",
    image: "s3.svg",
  },
  {
    name: "SFTP",
    description: "Backup to secure SFTP server",
    image: "sftp.svg",
  },
  {
    name: "WebDAV",
    description: "Use any WebDAV server",
    image: "webdav.svg",
  },
  {
    name: "RClone Remote",
    description: "70+ cloud providers via RClone",
    image: "rclone.svg",
  },
];

const allStorages = [...localStorages, ...cloudStorages, ...otherStorages];
---

<section class="w-content mx-auto flex flex-col items-center py-16 sm:py-24">
  <h2 class="text-center text-4xl font-bold sm:text-5xl">Ready for any storage</h2>
  <p
    class="text-muted-foreground mt-4 text-center text-sm md:text-base"
  >
    BlinkDisk allows you to store your backups on nearly any storage you want.
  </p>

  <!-- Mobile Marquees -->
  <div class="mt-12 flex w-full flex-col gap-4 sm:hidden">
    <StorageMarquee storages={localStorages} />
    <StorageMarquee storages={cloudStorages} reverse />
    <StorageMarquee storages={otherStorages} />
  </div>

  <!-- Desktop Grid -->
  <div class="relative hidden w-full sm:block">
    <div class="mt-20 grid w-full grid-flow-col grid-rows-6 gap-4 md:grid-rows-4">
      {
        allStorages.map((storage) => (
          <div class="bg-card flex items-center gap-4 rounded-xl border p-4">
            <img
              src={`/images/providers/${storage.image}`}
              class="size-8 grayscale"
              alt={storage.name}
            />
            <div>
              <p class="text-sm font-medium">{storage.name}</p>
              <p class="text-muted-foreground text-xs">
                {storage.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
    <div class="pointer-events-none absolute bottom-0 left-0 h-24 w-full bg-gradient-to-t from-background to-transparent"></div>
  </div>

  <p class="text-muted-foreground mt-6 text-center text-sm">
    ...and many more.
  </p>
</section>
