---
import { Image } from "astro:assets";
import screenshotLight from "@marketing/assets/screenshots/light.png";
import screenshotDark from "@marketing/assets/screenshots/dark.png";
import Button from "@marketing/components/Button.astro";
import DownloadIcon from "@lucide/astro/icons/download";
import PlayIcon from "@lucide/astro/icons/play";
import XIcon from "@lucide/astro/icons/x";
---

<div class="pt-page flex flex-col items-center justify-center pb-16 sm:pb-24">
  <div
    class="flex max-w-[90vw] flex-col items-center text-center md:max-w-[38rem]"
  >
    <h1
      class="animate-fade-in mt-4 text-5xl text-[2.5rem] font-bold leading-tight tracking-tight md:text-6xl"
    >
      Secure your files
      <br class="hidden sm:block" />
      before it's too late
    </h1>
    <p
      class="text-muted-foreground animate-fade-in mt-4 text-base sm:mt-6 sm:text-lg md:text-xl md:leading-relaxed"
      style="animation-delay: 0.2s"
    >
      BlinkDisk is a desktop application that lets you effortlessly create
      backup copies of all your important files
      <span class="hidden sm:inline"> with just a few clicks</span>.
    </p>
    <div class="mt-8 flex items-center gap-3 sm:mt-12">
      <Button
        variant="secondary"
        size="icon"
        href="https://github.com/blinkdisk/blinkdisk"
        target="_blank"
        rel="noopener noreferrer"
        style="animation-delay: 0.4s"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="size-5 sm:size-6"
        >
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </Button>
      <Button href="/download" style="animation-delay: 0.35s">
        <DownloadIcon class="mr-1.5 size-4 md:size-5" />
        Download for free
      </Button>
    </div>
  </div>
  <div
    id="hero-video-trigger"
    class="animate-fade-in lg:rounded-4xl relative mt-16 cursor-pointer overflow-hidden rounded-xl sm:mt-20 sm:rounded-2xl md:rounded-3xl"
    style="animation-delay: 0.5s"
  >
    <Image
      src={screenshotLight}
      alt="Screenshot of the BlinkDisk desktop app"
      class="w-content border shadow dark:hidden"
      widths={[640, 960, 1280, 1600]}
      sizes="(max-width: 640px) 90vw, (max-width: 1024px) 90vw, 1024px"
      loading="eager"
      fetchpriority="high"
      quality={85}
    />
    <Image
      src={screenshotDark}
      alt="Screenshot of the BlinkDisk desktop app"
      class="w-content hidden border shadow dark:block"
      widths={[640, 960, 1280, 1600]}
      sizes="(max-width: 640px) 90vw, (max-width: 1024px) 90vw, 1024px"
      loading="eager"
      fetchpriority="high"
      quality={85}
    />
    <div
      class="group absolute inset-0 flex items-center justify-center bg-opacity-0 transition-colors hover:bg-black/10"
    >
      <div
        class="bg-foreground/20 border-foreground/20 sm:size-18 lg:size-22 flex size-16 items-center justify-center rounded-full border-2 shadow-2xl transition-transform group-hover:scale-110 md:size-20"
      >
        <PlayIcon class="text-foreground size-5/12 fill-current" />
      </div>
    </div>
  </div>
</div>

<!-- Video Modal -->
<dialog id="hero-video-modal" class="video-modal">
  <div class="video-modal-content">
    <button
      id="hero-video-close"
      class="video-modal-close"
      aria-label="Close video"
    >
      <XIcon class="size-5" />
    </button>
    <div class="video-modal-iframe-wrapper">
      <iframe
        id="hero-video-iframe"
        width="100%"
        height="100%"
        src=""
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </div>
  </div>
</dialog>

<script>
  const trigger = document.getElementById("hero-video-trigger");
  const modal = document.getElementById(
    "hero-video-modal",
  ) as HTMLDialogElement;
  const closeBtn = document.getElementById("hero-video-close");
  const iframe = document.getElementById(
    "hero-video-iframe",
  ) as HTMLIFrameElement;

  const videoUrl = "https://www.youtube.com/embed/wAKE0aHJptM?autoplay=1";

  trigger?.addEventListener("click", () => {
    iframe.src = videoUrl;
    modal?.showModal();
  });

  closeBtn?.addEventListener("click", () => {
    modal?.close();
  });

  modal?.addEventListener("close", () => {
    iframe.src = "";
  });

  modal?.addEventListener("click", (e) => {
    if (e.target === modal) {
      modal.close();
    }
  });
</script>

<style>
  .video-modal {
    position: fixed;
    inset: 0;
    margin: auto;
    padding: 0;
    border: none;
    background: transparent;
    max-width: 90vw;
    max-height: 90vh;
    width: 100%;
    height: fit-content;
  }

  .video-modal::backdrop {
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
  }

  .video-modal-content {
    position: relative;
    width: 100%;
    max-width: 1152px;
    margin: 0 auto;
  }

  .video-modal-close {
    position: absolute;
    top: -40px;
    right: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 9999px;
    border: none;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .video-modal-close:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .video-modal-iframe-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 12px;
    overflow: hidden;
    background: black;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }

  @media (min-width: 640px) {
    .video-modal-iframe-wrapper {
      border-radius: 16px;
    }
  }

  @media (min-width: 768px) {
    .video-modal-iframe-wrapper {
      border-radius: 20px;
    }
  }
</style>
