---
import logoLight from "@/assets/brand/logo-light.svg";
import logoDark from "@/assets/brand/logo-dark.svg";

const links = [
  { href: "/pricing", label: "Pricing" },
  {
    label: "GitHub",
    href: "https://github.com/blinkdisk/blinkdisk",
    target: "_blank",
  },
  {
    label: "Roadmap",
    href: "https://github.com/orgs/blinkdisk/projects/2",
    target: "_blank",
  },
];
---

<nav
  id="nav"
  style="z-index: 1002"
  class="w-content fixed left-1/2 flex -translate-x-1/2 flex-row items-center justify-between rounded-2xl border border-transparent py-4 transition-all duration-300 top-0"
>
  <!-- Desktop layout -->
  <div class="hidden w-full items-center justify-between sm:flex">
    <a href="/" class="ml-1.5">
      <img
        src={logoLight.src}
        class="h-5 select-none dark:hidden sm:!h-6"
        draggable="false"
        alt="BlinkDisk"
      />
      <img
        src={logoDark.src}
        class="hidden h-5 select-none dark:block sm:!h-6"
        draggable="false"
        alt="BlinkDisk"
      />
    </a>
    <div class="flex items-center gap-12">
      {links.map((link) => (
        <a
          href={link.href}
          class="text-foreground/80 hover:text-foreground transition-colors"
          target={link.target}
          rel={link.target === "_blank" ? "noopener noreferrer" : undefined}
        >
          {link.label}
        </a>
      ))}
    </div>
    <div class="flex gap-2">
      <a
        href="https://github.com/blinkdisk/blinkdisk"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-secondary hover:bg-secondary/80 border-border flex size-10 items-center justify-center rounded-md border transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
        </svg>
      </a>
      <a
        href="/download"
        class="bg-primary text-primary-foreground hover:bg-primary/90 inline-flex h-10 items-center justify-center gap-2 rounded-md px-4 text-sm font-medium transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
        Download
      </a>
    </div>
  </div>

  <!-- Mobile layout -->
  <div class="flex w-full flex-col sm:hidden">
    <div class="flex w-full items-center justify-between">
      <a href="/" class="ml-1.5">
        <img
          src={logoLight.src}
          class="h-5 select-none dark:hidden"
          draggable="false"
          alt="BlinkDisk"
        />
        <img
          src={logoDark.src}
          class="hidden h-5 select-none dark:block"
          draggable="false"
          alt="BlinkDisk"
        />
      </a>
      <button
        id="nav-toggle"
        class="flex size-8 items-center justify-center"
        aria-label="Toggle navigation"
      >
        <svg
          id="menu-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-foreground/60 hover:text-foreground/80 size-6"
        >
          <line x1="4" x2="20" y1="12" y2="12" />
          <line x1="4" x2="20" y1="6" y2="6" />
          <line x1="4" x2="20" y1="18" y2="18" />
        </svg>
        <svg
          id="close-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-foreground/60 hover:text-foreground/80 hidden size-6"
        >
          <path d="M18 6 6 18" />
          <path d="m6 6 12 12" />
        </svg>
      </button>
    </div>
    <div
      id="nav-menu"
      class="grid w-full grid-rows-[0fr] overflow-hidden transition-all duration-200"
    >
      <div class="flex w-full flex-col items-start overflow-hidden">
        <div class="mb-6 mt-4 flex flex-col gap-2 p-2">
          {links.map((link) => (
            <a
              href={link.href}
              class="text-foreground/80 hover:text-foreground transition-colors"
              target={link.target}
              rel={link.target === "_blank" ? "noopener noreferrer" : undefined}
            >
              {link.label}
            </a>
          ))}
        </div>
        <div class="flex w-full gap-2 p-2">
          <a
            href="https://github.com/blinkdisk/blinkdisk"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-secondary hover:bg-secondary/80 border-border flex size-10 items-center justify-center rounded-md border transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
          </a>
          <a
            href="/download"
            class="bg-primary text-primary-foreground hover:bg-primary/90 inline-flex h-10 grow items-center justify-center gap-2 rounded-md px-4 text-sm font-medium transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg>
            Download
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Mobile overlay -->
<div
  id="nav-overlay"
  style="z-index: 1000"
  class="pointer-events-none fixed inset-0 bg-black/20 opacity-0 pt-16 transition-opacity duration-200 dark:bg-black/50 sm:hidden"
></div>

<script>
  const nav = document.getElementById("nav");
  const toggle = document.getElementById("nav-toggle");
  const menu = document.getElementById("nav-menu");
  const overlay = document.getElementById("nav-overlay");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");

  let isOpen = false;

  function updateNav() {
    const docked = window.scrollY >= 100;

    if (docked || isOpen) {
      nav?.classList.add("bg-secondary", "border-foreground/10", "top-4", "p-4");
      nav?.classList.remove("top-0", "border-transparent");
    } else {
      nav?.classList.remove("bg-secondary", "border-foreground/10", "top-4", "p-4");
      nav?.classList.add("top-0", "border-transparent");
    }
  }

  function toggleMenu() {
    isOpen = !isOpen;

    if (isOpen) {
      menu?.classList.remove("grid-rows-[0fr]");
      menu?.classList.add("grid-rows-[1fr]");
      overlay?.classList.remove("opacity-0", "pointer-events-none");
      overlay?.classList.add("opacity-100");
      menuIcon?.classList.add("hidden");
      closeIcon?.classList.remove("hidden");
    } else {
      menu?.classList.add("grid-rows-[0fr]");
      menu?.classList.remove("grid-rows-[1fr]");
      overlay?.classList.add("opacity-0", "pointer-events-none");
      overlay?.classList.remove("opacity-100");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
    }

    updateNav();
  }

  toggle?.addEventListener("click", toggleMenu);
  overlay?.addEventListener("click", () => {
    if (isOpen) toggleMenu();
  });

  window.addEventListener("scroll", updateNav, { passive: true });
  updateNav();
</script>
