---
import ArrowRightIcon from "@lucide/astro/icons/arrow-right";

type Props = {
  term: string;
  slug: string;
  summary: string;
};

const { term, slug, summary } = Astro.props;
---

<a
  href={`/glossary/${slug}`}
  class="group flex flex-col rounded-xl border bg-card p-6 transition-colors hover:border-primary/50"
  data-astro-prefetch
>
  <div class="mb-3 flex items-center justify-between">
    <h3 class="text-foreground text-lg font-semibold group-hover:text-primary transition-colors">
      {term}
    </h3>
    <ArrowRightIcon class="text-muted-foreground size-4 transition-transform group-hover:translate-x-1 group-hover:text-primary" />
  </div>
  <p class="text-muted-foreground text-sm line-clamp-2">{summary}</p>
</a>
