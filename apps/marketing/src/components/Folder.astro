---
import EmojiCard from "@marketing/components/EmojiCard.astro";

type Props = {
  folder: {
    emoji: string;
    name: string;
    files: number;
    size?: number;
  };
};

const { folder } = Astro.props;
---

<div class="flex items-center gap-3">
  <EmojiCard emoji={folder.emoji} size="sm" />
  <div class="flex flex-col">
    <p class="whitespace-nowrap text-base font-semibold">{folder.name}</p>
    <p class="text-muted-foreground text-xs">
      {folder.files.toLocaleString()} Files
      {
        folder.size ? (
          <Fragment> â¸± {folder.size.toLocaleString()} GB</Fragment>
        ) : null
      }
    </p>
  </div>
</div>
