---
type Props = {
  storages: { name: string; image: string }[];
  reverse?: boolean;
};

const { storages, reverse = false } = Astro.props;
---

<div
  class="w-full overflow-hidden"
  style="mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);"
>
  <div class:list={["flex w-max", reverse ? "marquee-reverse" : "marquee"]}>
    <div class="flex items-center gap-6 pl-6">
      {
        storages.map((storage) => (
          <div class="bg-card flex items-center gap-3 rounded-xl border px-4 py-3">
            <img
              src={`/images/providers/${storage.image}`}
              class="size-6"
              alt={storage.name}
            />
            <p class="whitespace-nowrap text-sm font-medium">{storage.name}</p>
          </div>
        ))
      }
    </div>
    <div class="flex items-center gap-6 pl-6">
      {
        storages.map((storage) => (
          <div class="bg-card flex items-center gap-3 rounded-xl border px-4 py-3">
            <img
              src={`/images/providers/${storage.image}`}
              class="size-6"
              alt={storage.name}
            />
            <p class="whitespace-nowrap text-sm font-medium">{storage.name}</p>
          </div>
        ))
      }
    </div>
  </div>
</div>
