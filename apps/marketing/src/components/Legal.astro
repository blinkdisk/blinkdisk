---
type Props = {
  content: string;
};

const { content } = Astro.props;
---

<div class="py-page flex min-h-screen flex-col items-center">
  <div class="mt-auto"></div>
  <article class="prose dark:prose-invert md:prose-md max-w-[90vw] md:!max-w-[40rem]" set:html={content} />
  <div class="mb-auto"></div>
</div>

<style>
  article :global(h1),
  article :global(h2),
  article :global(h3) {
    scroll-margin-top: 8rem;
  }
</style>
