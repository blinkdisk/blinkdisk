{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@marketing/*": ["./src/*"],
      "@ui/*": ["../../libs/ui/src/*"],
      "@utils/*": ["../../libs/utils/src/*"],
      "@hooks/*": ["../../libs/hooks/src/*"],
      "@styles/*": ["../../libs/styles/*"],
      "@config/*": ["../../libs/config/src/*"]
    }
  }
}
